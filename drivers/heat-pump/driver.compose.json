{
  "name": {
    "en": "Heat Pump"
  },
  "class": "heatpump",
  "capabilities": [
    "hot_water_mode",
    "measure_power",
    "alarm_tank_empty",
    "measure_temperature",
    "average-outdoor-temperature",
    "water-pressure",
    "status",
    "current-hot-water-temperature",
    "desired-hot-water-temperature"
  ],
  "capabilitiesOptions": {
    "measure_power": {
      "approximated": true
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "cloud"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  },
  "pair": [
    {
      "id": "login_credentials",
      "template": "login_credentials",
      "options": {
        "logo": "/assets/images/vaillant-logo.png",
        "title": {
          "en": "Login with your myVaillant account"
        },
        "usernameLabel": {
          "en": "E-mail address"
        },
        "usernamePlaceholder": {
          "en": "john@doe.com"
        },
        "passwordLabel": {
          "en": "Password"
        },
        "passwordPlaceholder": {
          "en": "Password"
        }
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}
